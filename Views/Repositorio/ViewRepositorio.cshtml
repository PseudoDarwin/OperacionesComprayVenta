                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Autor:</label>
                        <input type="text" class="form-control" id="txtAutoragregar">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Tipo de Archivo:</label>
                        <select id="dropTipoagregar" class="form-control">
                            <!-- Opción por defecto si lo necesitas -->
                            <option value="">Selecciona una opción</option>
                        </select>

                        @*<input type="text" class="form-control" id="txtTipoagregar">*@
                    </div>
                </form>
                <div class="mb-3">
                    @using (Html.BeginForm("SubirArchivo", "Repositorio", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <input id="fileInput" type="file" name="archivo" />
                        <input type="submit" id="btnSubirArchivo" value="Subir archivo" style="display:none" />

