<div class="card" style="height:70vh">
    <div class="card-header bg-primary">
        <div class="container">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-10">
                    <h5 class="card-title" style="color:white">Gestionar repositorio</h5>
                </div>
                <div class="col-2 d-flex justify-content-end">
                    <button type="submit" class="btnAgregar btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalAgregarArchivo" style="color:white"><i class="bi bi-file-earmark-plus"></i> Agregar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">

        <div class="col-sm-12" style="max-height: 70vh; overflow-y: auto;">
            <table id="dgvUsuarios" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Título</th>
                        <th scope="col">Materia</th>
                        <th scope="col">Carrera</th>
                        <th scope="col">Autor</th>
                        <th scope="col">Tipo de Archivo</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RepositorioDigital.Models.ModelRepositorio _model in Model)
                    {
                        <tr>
                            <td>@_model.idarchivo</td>
                            <td>@_model.titulo</td>
                            <td>@_model.materia</td>
                            <td>@_model.carrera</td>
                            <td>@_model.autor</td>
                            <td>@_model.tipo</td>
                            <td>
                                <a class="btn btn-success btn-sm" onclick="mostrarEditarArchivo(@_model.idarchivo,'@_model.titulo','@_model.materia','@_model.carrera','@_model.autor','@_model.tipo')"><i class="far fa-edit"></i></a>
                                <a class="btn btn-danger btn-sm" onclick="mostrarEliminarArchivo(@_model.idarchivo,'@_model.titulo')"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card-body -->
</div>




