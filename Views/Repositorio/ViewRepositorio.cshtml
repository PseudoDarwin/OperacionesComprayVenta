<!-- Modal -->
<div class="modal fade" id="ModalAgregarArchivo" tabindex="-1" data-bs-backdrop="static" aria-labelledby="ModalAgregarArchivo" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" style="color:white" id="exampleModalLabel">Rellene los campos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div id="mensajeAgregarArchivo" class="alert alert-danger" style="margin-top:5px; display:none">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Titulo:</label>
                        <input type="text" class="form-control" id="txtTituloagregar">
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Materia:</label>
                        <select id="dropMateriaagregar" class="form-control">
                            <!-- Opción por defecto si lo necesitas -->
                            <option value="">Selecciona una opción</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Carrera:</label>

                        <select id="dropCarreraagregar" class="form-control">
                            <!-- Opción por defecto si lo necesitas -->
                            <option value="">Selecciona una opción</option>
                        </select>

                        @*<input type="text" class="form-control" name="Carrera" id="txtCarreraagregar">*@
