<script>
    $(document).ready(function () {
        // Realiza una solicitud AJAX para obtener los datos desde el controlador
        $.ajax({
            url: '@Url.Action("BuscarCarrera", "Repositorio")',
            type: 'GET',
            dataType: 'json',
            success: function (data) {

                // Llena el dropdown con los datos obtenidos
                llenarDropdown(data);
            },
            error: function (error) {
                console.log(error);
            }
        });
    });

    function llenarDropdown(data) {
        var i = 0;

        // Obtén la referencia al dropdown
        var dropdown = $('#dropCarreraagregar');
        dropdown.empty();
        // Itera sobre los datos y agrega opciones al dropdown
        $.each(data, function (index, item) {
            i = i + 1;
            dropdown.append($('<option>', {
                value: item, // Ajusta el nombre de la propiedad según tus datos
                text: item // Ajusta el nombre de la propiedad según tus datos
            }))

        });
    }
</script>


